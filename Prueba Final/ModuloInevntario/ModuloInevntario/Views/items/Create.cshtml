@model ModuloInevntario.Models.item

@{
    ViewBag.Title = "Create";
}
<br />
<link rel="stylesheet" href="../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<h2 class="text-center" style="background-color:#3072AC; color:#ffffff;">Ingresar Item</h2>
<script src="~/Scripts/jquery-3.3.1.js"></script>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Catálogo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CODIGO, htmlAttributes: new { @class = "control-label col-md-2", id="Codigo"})
            <div class="col-md-10">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key fa-1x"></i></span>
                    @Html.EditorFor(model => model.CODIGO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CODIGO, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TIPOITEM, htmlAttributes: new { @class = "control-label col-md-2", id="Tipo" })
            <div class="col-md-10">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-tasks fa-1x"></i></span>
                    @Html.EditorFor(model => model.TIPOITEM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TIPOITEM, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CATEGORIAITEM, htmlAttributes: new { @class = "control-label col-md-2",id= "Categoria" })
            <div class="col-md-10">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-window-restore fa-1x"></i></span>
                    @Html.EditorFor(model => model.CATEGORIAITEM, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CATEGORIAITEM, "", new { @class = "text-danger" })
                </div>
                
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Create" class="btn btn-outline-success"><i class="fas fa-plus"></i> Ingresar</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $('#Codigo').text('C\u00F3digo');
    $('#Tipo').text('Tipo Item');
    $('#Categoria').text('Categoria');
</script>
