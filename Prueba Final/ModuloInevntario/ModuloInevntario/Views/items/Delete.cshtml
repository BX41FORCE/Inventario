@model ModuloInevntario.Models.item

@{
    ViewBag.Title = "Delete";
}

<link rel="stylesheet" href="../../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<h2 class="text-center" style="background-color:#3072AC; color:#ffffff;">Eliminar Registro</h2>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<h3>Estas seguro de eliminar?</h3>
<div>
    <h4>Catálogo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt id="Codigo">
            @Html.DisplayNameFor(model => model.CODIGO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CODIGO)
        </dd>

        <dt id="Tipo">
            @Html.DisplayNameFor(model => model.TIPOITEM)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TIPOITEM)
        </dd>

        <dt id="Categoria">
            @Html.DisplayNameFor(model => model.CATEGORIAITEM)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CATEGORIAITEM)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" value="Delete" class="btn btn-outline-danger"><i class="fas fa-times-circle"></i> Eliminar</button> |
            @Html.ActionLink("Volver", "Index")
        </div>
    }
</div>
<script>
    $('#Codigo').text('C\u00F3digo');
    $('#Tipo').text('Tipo Item');
    $('#Categoria').text('Categoria');
</script>
