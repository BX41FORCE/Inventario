@model ModuloInevntario.ViewModels.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<br />
<h3>Catálogo</h3>
<link rel="stylesheet" href="../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<p>
    <a href="/" class="btn btn-outline-primary btn-sm"><i class="fas fa-undo-alt fa-1x"></i> Regresar</a> |
    @Html.ActionLink("Ingresar", "Create")
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                Código
            </th>
            <th>
                Tipo de Item
            </th>
            <th>
                Categoria Item
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.itemsCatalogo)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CODIGO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIPOITEM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CATEGORIAITEM)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.SECUENCIAL }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.SECUENCIAL }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.SECUENCIAL })
                </td>
            </tr>
        }
    </tbody>
</table>

@{Html.RenderPartial("_paginador", Model);}