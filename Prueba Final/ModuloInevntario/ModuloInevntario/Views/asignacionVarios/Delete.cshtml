@model ModuloInevntario.Models.asignacionVarios

@{
    ViewBag.Title = "Delete";
}
<br />
<script src="~/Scripts/jquery-3.3.1.js"></script>
<link rel="stylesheet" href="../../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<h2 class="text-center" style="background-color:#3072AC; color:#ffffff;">Eliminar Registro</h2>

<h3>Estas seguro de eliminar?</h3>
<div>
    <h4>Asignación Varios</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt id="Responsable">
            @Html.DisplayNameFor(model => model.RESPONSABLE)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RESPONSABLE)
        </dd>
        </br>
        <dt id="Codigo">
            @Html.DisplayNameFor(model => model.CODIGOINTERNO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CODIGOINTERNO)
        </dd>
        </br>
        <dt id="FechaInicio">
            @Html.DisplayNameFor(model => model.TIEMPOINICIO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TIEMPOINICIO)
        </dd>
        </br>
        <dt id="FechaFin">
            @Html.DisplayNameFor(model => model.TIEMPOFIN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TIEMPOFIN)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" value="Delete" class="btn btn-outline-danger"><i class="fas fa-times-circle"></i> Eliminar</button> |
            @Html.ActionLink("Volver", "Index")
        </div>
    }
</div>
<script>
    $('#Responsable').text('Responsable');
    $('#Codigo').text('C\u00F3digo Interno');
    $('#FechaInicio').text('Fecha de Asignaci\u00F3n');
    $('#FechaFin').text('Fecha de Finalizaci\u00F3n');
</script>