@model ModuloInevntario.Models.asignacionVarios

@{
    ViewBag.Title = "Create";
}
<br />
<p></p>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<link rel="stylesheet" href="../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<h2 class="text-center" style="background-color:#3072AC; color:#ffffff;">Asignar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Asignacion Varios</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RESPONSABLE, htmlAttributes: new { @class = "control-label col-md-2", id = "Rsponsable" })
            <div class="col-md-10">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-user fa-1x"></i></span>
                    @Html.EditorFor(model => model.RESPONSABLE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RESPONSABLE, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CODIGOINTERNO, htmlAttributes: new { @class = "control-label col-md-2", id = "Codigo" })
            <div class="col-md-10">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key fa-1x"></i></span>
                    @Html.EditorFor(model => model.CODIGOINTERNO, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CODIGOINTERNO, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TIEMPOINICIO, htmlAttributes: new { @class = "control-label col-md-2", id = "FechaInicio" })
            <div class="col-md-10">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-calendar-alt"></i></span>
                    @Html.EditorFor(model => model.TIEMPOINICIO, new { htmlAttributes = new { @class = "form-control", Type = "Date" } })
                    @Html.ValidationMessageFor(model => model.TIEMPOINICIO, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.TIEMPOFIN, htmlAttributes: new { @class = "control-label col-md-2", id = "FechaFin" })
            <div class="col-md-10">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-calendar-alt"></i></span>
                    @Html.EditorFor(model => model.TIEMPOFIN, new { htmlAttributes = new { @class = "form-control", Type = "Date" } })
                    @Html.ValidationMessageFor(model => model.TIEMPOFIN, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Create" class="btn btn-outline-success"><i class="fas fa-edit"></i> Asignar</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $('#Responsable').text('Responsable');
    $('#Codigo').text('C\u00F3digo Interno');
    $('#FechaInicio').text('Fecha de Asignaci\u00F3n');
    $('#FechaFin').text('Fecha de Finalizaci\u00F3n');
</script>
