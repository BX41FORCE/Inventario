@model ModuloInevntario.Models.mantenimientoVarios

@{
    ViewBag.Title = "Delete";
}

<link rel="stylesheet" href="../../Scripts/fontawesome-free-5.3.1-web/css/all.min.css">
<h2 class="text-center" style="background-color:#3072AC; color:#ffffff;">Eliminar Registro</h2>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<div>
    <h4>Mantenimiento de Computadores</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt id="Tipo">
            @Html.DisplayNameFor(model => model.TIPO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TIPO)
        </dd>

        <dt id="Responsable">
            @Html.DisplayNameFor(model => model.RESPONSABLE)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RESPONSABLE)
        </dd>

        <dt id="Codigo">
            @Html.DisplayNameFor(model => model.CODIGOINTERNO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CODIGOINTERNO)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" value="Delete" class="btn btn-outline-danger"><i class="fas fa-times-circle"></i> Eliminar</button> |
            @Html.ActionLink("Volver", "Index")
