@model IEnumerable<ModuloInventario.Models.ITEM>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<link rel="stylesheet" href="~/css/fontawesome-free-5.3.1-web/css/all.min.css">
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CODIGO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIPOITEM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CATEGORIAITEM)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CODIGO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TIPOITEM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORIAITEM)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SECUENCIAL">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SECUENCIAL">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SECUENCIAL">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
