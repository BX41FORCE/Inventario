@model IEnumerable<ModuloInventario.Models.ITEM>

@{
    ViewData["Title"] = "Index";
}

<h2>Catalogo</h2>
<link rel="stylesheet" href="~/css/fontawesome-free-5.3.1-web/css/all.min.css">
<p>
    <a asp-action="Create">Nuevo</a>
</p>
<table class="table table-responsive" border="1">
    <thead style="background-color:#3072AC; color:#ffffff;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CODIGO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIPOITEM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CATEGORIAITEM)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CODIGO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TIPOITEM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CATEGORIAITEM)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SECUENCIAL">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.SECUENCIAL">Detalle</a> |
                    <a asp-action="Delete" asp-route-id="@item.SECUENCIAL">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
