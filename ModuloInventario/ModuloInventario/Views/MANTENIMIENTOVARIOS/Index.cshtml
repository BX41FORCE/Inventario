@model IEnumerable<ModuloInventario.Models.MANTENIMIENTOVARIOS>

@{
    ViewData["Title"] = "Index";
}

<h2>Mantenimiento Equipos</h2>
<link rel="stylesheet" href="~/css/fontawesome-free-5.3.1-web/css/all.min.css">
<p>
    <a asp-action="Create">Enviar a mantenimiento</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TIPO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RESPONSABLE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CODIGOINTERNO)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TIPO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RESPONSABLE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CODIGOINTERNO)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SECUENCIAL">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.SECUENCIAL">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.SECUENCIAL">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
