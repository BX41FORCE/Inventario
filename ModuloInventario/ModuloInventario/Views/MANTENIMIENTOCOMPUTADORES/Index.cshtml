@model IEnumerable<ModuloInventario.Models.MANTENIMIENTOCOMPUTADORES>

@{
    ViewData["Title"] = "Index";
}

<h2>Mantenimiento Computadores</h2>

<p>
    <a asp-action="Create">Enviar a Mantenimiento</a>
</p>
<table class="table table-responsive" border="1">
    <thead style="background-color:#3072AC; color:#ffffff;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TIPO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RESPONDABLE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CODIGOINTERNO)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TIPO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RESPONDABLE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CODIGOINTERNO)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SECUENCIAL">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.SECUENCIAL">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.SECUENCIAL">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
